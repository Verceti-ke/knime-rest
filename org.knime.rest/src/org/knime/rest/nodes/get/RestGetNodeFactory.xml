<?xml version="1.0" encoding="UTF-8"?>
<knimeNode icon="./default.png" type="Manipulator" xmlns="http://knime.org/node/v2.10" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://knime.org/node/v2.10 http://knime.org/node/v2.10.xsd">
    <name>GET</name>
    
    <shortDescription>
        GET REST client
    </shortDescription>
    
    <fullDescription>
        <intro>GET the content using the Apache CXF client.</intro>
        
        <tab name="Connection Settings">
            <option name="URI">The column or the actual constant URI</option>
            <option name="Delay between requests">Delay between response and the next request in milliseconds</option>
            <option name="Concurrency">Number of concurrent requests</option>
            <option name="Ignore hostname mismatches">Trust the certificate even if it was generated for a different host.</option>
            <option name="Trust all certificates">Trust all certificates regardless their origin or expiration date</option>
        </tab>
        <!-- tab name="Authentication">
            <option name="Type">Basic/Digest/None</option>
            <option name="User name">User name.</option>
            <option name="Password">Password</option>
            <option name="Cookie">The cookie pair for authentication.</option>
            <option name="Custom header key">Custom header key for authentication (like "API key")</option>
            <option name="Custom header value">Custom header value (the actual API key)</option>
            Not sure how to handle the documentation for extension provided options
        </tab-->
        <tab name="Request Headers">
            <option name="Header key">constant key (with option to use String type flow variable)</option>
            <option name="Header value">the value (or reference to flow var, column)</option>
            <option name="Header kind">value flow var/constant/column</option>
            <!-- option name="Header type">in case we need to convert the type to string, the conversion option</option-->
        </tab>
        <tab name="Response Headers">
            <option name="Extract all fields">Extracts all header fields (present in the first response)</option>
            <option name="Header key">The name of the header value to extract</option>
            <option name="Header type">Convert the header value to this type</option>
            <option name="Body">Name of the response body column</option>
        </tab>
    </fullDescription>
    
    <ports>
        <inPort index="0" name="Table">Data table containing the variable parameters of the requests.</inPort>
        <outPort index="0" name="GET results">Data table containing additional columns from the responses.</outPort>
    </ports>    
